// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id                     String               @id @default(cuid())
  orgnr                  String               @unique
  name                   String
  organizationFormCode   String?
  organizationFormName   String?
  status                 String               @default("unknown") // active, inactive, unknown
  foundedDate            DateTime?
  municipality           String?
  municipalityNumber     String?
  county                 String?
  postalCode             String?
  address                String?
  industryCode           String?
  industryDescription    String?
  employeeCount          Int?
  website                String?
  phone                  String?
  email                  String?
  logoUrl                String?
  hasRolesData           Boolean              @default(false)
  aiSummary              String?
  aiUseCaseFit           Int?                 @default(0) // 0-100
  aiUrgencyScore         Int?                 @default(0) // 0-100
  aiDataQualityScore     Int?                 @default(0) // 0-100
  overallLeadScore       Int?                 @default(0) // 0-100
  tags                   String[]             @default([])
  lastSeenAt             DateTime             @default(now())
  sourceUpdatedAt        DateTime?
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  rawJson                Json?
  roles                  CompanyRole[]
  subEntities            SubEntity[]          @relation("ParentCompany")
  contactEnrichments     ContactEnrichment[]
  scoreExplanations      ScoreExplanation[]

  @@index([orgnr])
  @@index([status])
  @@index([overallLeadScore])
  @@index([municipality])
  @@index([industryCode])
  @@index([employeeCount])
  @@index([lastSeenAt])
}

model CompanyRole {
  id          String    @id @default(cuid())
  companyId   String
  roleType    String
  roleGroup   String?
  personName  String?
  birthDate   DateTime?
  phone       String?
  email       String?
  rawJson     Json?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  company     Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([roleType])
}

model SubEntity {
  id             String    @id @default(cuid())
  orgnr          String    @unique
  parentOrgnr    String
  name           String
  status         String    @default("unknown")
  industryCode   String?
  address        String?
  municipality   String?
  phone          String?
  rawJson        Json?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  parentCompany  Company   @relation("ParentCompany", fields: [parentOrgnr], references: [orgnr], onDelete: Cascade)

  @@index([orgnr])
  @@index([parentOrgnr])
}

model SyncJob {
  id              String    @id @default(cuid())
  type            String    // full, incremental, roles, subentities
  status          String    @default("running") // running, completed, failed
  startedAt       DateTime  @default(now())
  finishedAt      DateTime?
  processedCount  Int       @default(0)
  errorCount      Int       @default(0)
  log             String?
  metadata        Json?

  @@index([type])
  @@index([status])
  @@index([startedAt])
}

model ContactEnrichment {
  id          String   @id @default(cuid())
  companyId   String
  provider    String   // e.g., "manual", "hunter", "apollo"
  contactName String?
  title       String?
  phone       String?
  email       String?
  confidence  Float?   // 0-1
  createdAt   DateTime @default(now())
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([provider])
}

model ScoreExplanation {
  id          String   @id @default(cuid())
  companyId   String
  signal      String
  weight      Int
  reason      String
  createdAt   DateTime @default(now())
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

model FilterPreset {
  id          String   @id @default(cuid())
  name        String
  description String?
  filters     Json     // Store filter config as JSON
  userId      String?  // Optional: user-specific presets
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String   // sync_triggered, export_csv, etc.
  entityType  String?  // company, sync_job, etc.
  entityId    String?
  metadata    Json?
  ipAddress   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}
